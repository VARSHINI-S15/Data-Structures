// C++ Program to find the Sum and Product of elements of an Array

#include <iostream>
using namespace std;
int main() {
   int i,n,sum=0,product=1,arr[50];
// initialising product to 1 
   cout<<"Enter the value of n : "<<endl;
   cin>>n;
   cout<<"Enr the elements of the array : "<<endl;
   for(i=0;i<n;i++)
   {
       cin>>arr[i];
   }
   for(i=0;i<n;i++)
   {
       sum+=arr[i];
       product*=arr[i];
   }
   cout<<"The sum of the elements in the array is : "<<sum<<endl;
   cout<<"The product of the elements of the array is : "<<product<<endl;
    return 0;
}
