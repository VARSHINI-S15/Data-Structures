//C++ Program to find the largest and smallest of the elements of the array 

#include <iostream>
using namespace std;
int main() {
   int i,n,max,min,arr[50];
   cout<<"Enter the value of n : "<<endl;
   cin>>n;
   cout<<"Enetr the elements of the array : "<<endl;
   for(i=0;i<n;i++)
   {
       cin>>arr[i];
   }

min=arr[0];
max=arr[0];
for(i=0;i<n;i++)
{
    if(arr[i]>max)
    {
        max=arr[i];
    }
    if(arr[i]<min)
    {
        min=arr[i];
    }
}
    cout<<"Maximum element of the array : "<<max<<endl;
    cout<<"Minimum element of the array : "<<min<<endl;
    return 0;
}
